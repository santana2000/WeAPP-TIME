<!--index.wxml-->
<view class="container">


  <view class='top'>
      <input class="search" placeholder="搜索记录" bindblur='getUserString'/>
      <image class='search-icon'src="../../images/others/search.png" bindtap='searchNotes'></image>

      <!-- <view class='search-icon'>
      </view> -->
  </view>

  <view class="all">
      <view class="aitem" data-id='{{item.datetime}}'  
            wx:for="{{alist}}" wx:key="item.aid" bindtap="toDetail" >
        <view class='content'> {{item.content}}  </view>
        <view class='site'>{{item.site}}  {{item.xtime}}    </view>
      </view>
  </view>


  
</view>